<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/shape_title">

            <TextView
                android:id="@+id/ad_textView_1"
                android:layout_width="97dp"
                android:layout_height="26dp"
                android:layout_centerInParent="true"
                android:background="@drawable/wallri" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/ButtonTextColor">

            <android.support.v7.widget.RecyclerView
                android:layout_marginTop="40dp"
                android:id="@+id/NaviFragmentRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@color/ButtonTextColor"></android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>