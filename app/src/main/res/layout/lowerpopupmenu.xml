<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Android="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/PopuWindow_Rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ButtonbackgroundColor">


        <RelativeLayout
            android:id="@+id/LowerPopuwindow_RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:id="@+id/Setting_up_desktop_wallpaper_Line"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/home_screen" />

                    <TextView
                        android:id="@+id/Setting_up_desktop_wallpaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/SettingUpDesktopWallpaper"
                        android:textColor="@color/ButtonTextColor"
                        android:textSize="10sp" />


                    <CheckBox
                        android:id="@+id/Set_up_desktop_CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:checked="true"
                        android:focusable="false"
                        android:theme="@style/My_CheckBox" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Set_up_desktop_and_lock_wallpaper_Line"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/Setting_up_desktop_wallpaper_Line"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:src="@drawable/lock_screen" />

                    <TextView
                        android:id="@+id/Set_up_desktop_and_lock_wallpaper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:text="@string/SetUpDesktopWallpaperAndLockWallpaperAtTheSameTime"
                        android:textColor="@color/ButtonTextColor"
                        android:textSize="10sp" />


                    <CheckBox
                        android:id="@+id/Set_up_desktop_and_lock_CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:focusable="false"
                        android:theme="@style/My_CheckBox" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>


        <TextView
            android:id="@+id/set_btu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LowerPopuwindow_RadioGroup"
            android:layout_centerInParent="true"
            android:background="@drawable/setdone"
            android:paddingBottom="5dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="5dp"
            android:text="@string/done"
            android:textColor="@color/ButtonTextColor" />


            <TextView
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/set_btu"
                android:id="@+id/ad_textView_1"
                android:layout_width="97dp"
                android:layout_height="26dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/wallri" />





    </RelativeLayout>

</android.support.constraint.ConstraintLayout>