<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/Ring_Feed_Banner_Native_Image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            ></ImageView>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/Ring_Feed_Banner_Native_Image"
            android:orientation="vertical">




            <TextView
                android:id="@+id/Ring_Feed_Banner_Native_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="hello world"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Ring_Feed_Banner_Native_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Ring_Homepage_Title"
                android:text="hello"
                android:textSize="8sp" />


        </LinearLayout>

        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/Ring_Feed_Banner_Native_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:text="Install Now"
           />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>