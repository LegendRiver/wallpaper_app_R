<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    '


    <com.facebook.drawee.view.SimpleDraweeView
        fresco:actualImageScaleType="focusCrop"
        android:id="@+id/Collection_item_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        fresco:placeholderImage="@drawable/shape_title"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Collection_Favorite_count"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:layout_toStartOf="@+id/Collection_Collection_"
            android:text="28192" />

        <ImageView

            android:id="@+id/Collection_Collection_"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/like" />
    </RelativeLayout>
</LinearLayout>