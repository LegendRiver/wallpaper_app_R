<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LargeRela"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bigImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="nihao "
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_marginTop="45dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/category_name"
        android:layout_width="250dp"
        android:layout_height="320dp"
        android:background="@drawable/radio_coner">

        <ImageView
            android:id="@+id/SmallRela"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />


        <TextView
            android:textColor="#ffffff"
            android:id="@+id/Ring_Details_Item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Ring_Details_Item_Play"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:text="title"
            android:textSize="16sp" />


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/Ring_Details_Item_Play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"

            />

        <ProgressBar
            android:id="@+id/Ring_Details_Item_ProgressBar"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Ring_Details_Item_Play"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp" />


    </RelativeLayout>


</RelativeLayout>